{
  "name": "digitalocean-doorkeeper",
  "version": "0.3.2",
  "description": "This Github action allows you to open or close an specific port in your DigitalOcean firewall. It's really useful for deploy in your instances from Github Actions, as they don't provide a list of IPs to add to your security groups.",
  "main": "src/main.ts",
  "scripts": {
    "local": "ts-node src/main.ts",
    "local:action": "npm run pack && act -j local -s DO_TOKEN",
    "pack": "NODE_OPTIONS=--openssl-legacy-provider ncc build",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fjpedrosa/doorkeeper.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fjpedrosa/doorkeeper/issues"
  },
  "homepage": "https://github.com/fjpedrosa/doorkeeper#readme",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^4.0.0",
    "@types/node-fetch": "^2.5.12",
    "dots-wrapper": "^3.6.2",
    "follow-redirects": ">=1.14.7",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^14.18.9",
    "@typescript-eslint/parser": "^8.26.1",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.22.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^2.5.1",
    "ts-jest": "^26.5.6",
    "ts-node": "^8.10.2",
    "typescript": "^4.9.5"
  }
}
